<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <bean id="dao" class="dao.Dao">

    </bean>

    <bean id="animalService" class="service.AnimalService">
        <property name="animalDao" ref="dao"/>
    </bean>

    <bean id="humanService" class="service.HumanService">
        <property name="dao" ref="dao"/>
    </bean>

    <bean id="facade" class="facade.Facade">
        <property name="animalService" ref="animalService"/>
        <property name="humanService" ref="humanService"/>
    </bean>

    <bean id="animalController" class="controller.AnimalController">
        <property name="facade" ref="facade"/>
    </bean>

    <bean id="humanController" class="controller.HumanController">
        <property name="facade" ref="facade"/>
    </bean>

    <context:annotation-config/>
</beans>